<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_14">

    <ImageView
        android:id="@+id/imageMovies"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_150"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNameMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:maxLines="3"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="@+id/imageMovies"
        app:layout_constraintStart_toStartOf="@+id/imageMovies"
        app:layout_constraintTop_toBottomOf="@+id/imageMovies" />
</androidx.constraintlayout.widget.ConstraintLayout>
